{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["node_modules", "dist", "bin", "jest.config.js"]
}
