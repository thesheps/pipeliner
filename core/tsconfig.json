{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "outDir": "dist",
    "composite": true
  },
  "exclude": ["node_modules", "examples", "__tests__", "dist"],
  "include": ["src", "index.ts"]
}
